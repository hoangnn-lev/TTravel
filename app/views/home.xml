<Alloy>
	<Window>
		<Require type="view" id="left_menu" src="left_menu"/>
		<View id="main">
			<View id="app">
				<View id="banner" onClick="open_close_slide_bar">
					<ImageView image="/banner/nha-trang.jpg" width="Ti.UI.FILL" left="0" top="0"/>
				</View>
				<View id="search">
					<View>
						<View id="searchIcon">
							<ImageView left="8dp" zIndex="1" image="/icon/search-icon.png" height="25dp" width="25dp" top="7dp"/>
						</View>
						<TextField id="searchBar" hintText="Nơi bạn muốn đến..."/>
						<Button id="searchButton" title="TÌM"/>
					</View>
				</View>
				<TableView separatorColor="#eaeaea"  id="list_location"/>
			</View>
			<Require type="view" src="bar_menu"/>
		</View>
	</Window>
</Alloy>