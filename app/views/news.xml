<Alloy>
	<Window>
		<View id="app">
			<View id="topBar">
				<ImageView height="30dp" onClick="back"  width="12dp"  image="/icon/Previous@2x.png" left="10dp"/>
				<ImageView height="30dp" width="30dp" onClick="filter"  image="/icon/list.png" right="15dp"/>
				<Label height="Ti.UI.SIZE" color="#fff">TIN TỨC</Label>
			</View>
			<View id="searchBar">
				<View id="searchIcon">
					<ImageView left="8dp" zIndex="1" image="/icon/search-icon.png" height="25dp" width="25dp" top="7dp"/>
				</View>
				<TextField class="newsSearchText" hintText="Tìm tin tức" />
			</View>
			<Label class="line" top="0"/>
			<TableView separatorColor="#eaeaea" id="list_news"/>
		</View>
		<Require type="view" src="bar_menu"/>
	</Window>
</Alloy>
