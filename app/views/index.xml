<Alloy>
	<Window backgroundImage="/login.jpg">

		<View id="loginBox">
			<View class="loginByFacebook">
				<ImageView zIndex="2" image="/icon/facebook.png" height="30dp" left="10dp" width="30dp"/>
				<Label text="Đăng nhập bằng Facebook" left="45dp" onClick="loginByFacebook"/>
			</View>
			<View class="loginByTwitter">
				<ImageView zIndex="2" image="/icon/twitter.png" height="30dp" left="10dp" width="30dp"/>
				<Label text="Đăng nhập bằng Twitter" left="45dp" onClick="loginByTwitter"/>
			</View>
			<View class="loginUser">
				<Label text="Bạn đã có tài khoản? Đăng nhập." color="#00597b"  onClick="login"/>
			</View>

		</View>

	</Window>
</Alloy>
